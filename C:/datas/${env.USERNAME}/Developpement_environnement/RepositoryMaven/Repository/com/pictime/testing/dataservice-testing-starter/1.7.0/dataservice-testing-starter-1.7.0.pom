<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<groupId>com.pictime.testing</groupId>
	<artifactId>dataservice-testing-starter</artifactId>
	<version>1.7.0</version>
	<packaging>pom</packaging>
	<modelVersion>4.0.0</modelVersion>

	<name>Starter Pom for Testing projects !</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
		<serenity.property.path>${basedir}/src/test/resources/serenity/serenity.properties</serenity.property.path>
		<browserstack.acceptSslCerts>true</browserstack.acceptSslCerts>
		<serenity-maven-plugin.version>1.8.21</serenity-maven-plugin.version>
		<maven-failsafe-plugin.include>**/pictime/test/**/*.java</maven-failsafe-plugin.include>
		<dataservice.url>http://dataservice.dev.lild01.pictime.fr:8080/</dataservice.url>
		<nexus.repositories.url>https://nexus.dev.os.pictime:444/content/repositories</nexus.repositories.url>
		<releaseRepositoryId>pictimeReleases</releaseRepositoryId>
		<snapshotRepositoryId>pictimeSnapshots</snapshotRepositoryId>
	</properties>

	<distributionManagement>
		<!-- Definition des referentiels maven ou deployer le projet -->
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>${releaseRepositoryId}</id>
			<name>http nexus ${releaseRepositoryId}</name>
			<url>${nexus.repositories.url}/releases/</url>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>${snapshotRepositoryId}</id>
			<name>http nexus ${snapshotRepositoryId}</name>
			<url>${nexus.repositories.url}/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<profiles>
		<profile>
			<id>firefoxMobile</id>
			<properties>
				<webdriver.firefox.profile>${basedir}/src/test/resources/serenity/drivers/FirefoxProfile</webdriver.firefox.profile>
			</properties>
		</profile>
		<profile>
			<id>firefox</id>
			<properties>
				<serenity.webdriver.driver>firefox</serenity.webdriver.driver>
				<browserstack.browser>Firefox</browserstack.browser>
				<custom.capabilities></custom.capabilities>
			</properties>
		</profile>
		<profile>
			<id>chrome</id>
			<properties>
				<serenity.webdriver.driver>chrome</serenity.webdriver.driver>
				<webdriver.chrome.driver>${basedir}/src/test/resources/serenity/drivers/chromedriver</webdriver.chrome.driver>
				<browserstack.browser>Chrome</browserstack.browser>
				<custom.capabilities></custom.capabilities>
			</properties>
		</profile>
		<profile>
			<id>internetExplorer</id>
			<properties>
				<serenity.webdriver.driver>iexplorer</serenity.webdriver.driver>
				<webdriver.ie.driver>${basedir}/src/test/resources/serenity/drivers/IEDriverServer.exe</webdriver.ie.driver>
				<browserstack.browser>IE</browserstack.browser>
				<custom.capabilities>nativeEvents:false;unexpectedAlertBehaviour:accept;ignoreProtectedModeSettings:true;disable-popup-blocking:true;enablePersistentHover:true;ie.ensureCleanSession:true;ignoreZoomSetting:true;</custom.capabilities>
			</properties>
		</profile>
		<profile>
			<id>remote</id>
			<properties>
				<browserstack.selenium.version>3.8.1</browserstack.selenium.version>
				<browserstack.acceptSslCerts>true</browserstack.acceptSslCerts>
				<serenity.take.screenshots>FOR_FAILURES</serenity.take.screenshots>
				<browserstack.local>true</browserstack.local>
				<browserstack.id>pictime1</browserstack.id>
				<browserstack.key>ERUnsdDVPernAqHzLgfs</browserstack.key>
				<browserstack.url>http://${browserstack.id}:${browserstack.key}@hub.browserstack.com/wd/hub</browserstack.url>
			</properties>
		</profile>
		<profile>
			<id>windows</id>
			<properties>
				<browserstack.platform>WINDOWS</browserstack.platform>
				<browserstack.os>WINDOWS</browserstack.os>
				<os.version>8</os.version>
				<os.resolution>1600x1200</os.resolution>
				<browserstack.os.version>${os.version}</browserstack.os.version>
				<browserstack.resolution>${os.resolution}</browserstack.resolution>
			</properties>
		</profile>
		<profile>
			<id>androidDevice</id>
			<properties>
				<device>Samsung Galaxy S5</device>
				<browserstack.device>${device}</browserstack.device>
				<browserstack.platform>ANDROID</browserstack.platform>
				<browserstack.os>android</browserstack.os>
				<browserstack.browser>Android</browserstack.browser>
				<dataservice.context>android</dataservice.context>
			</properties>
		</profile>
		<profile>
			<id>iphoneDevice</id>
			<properties>
				<browserstack.device>iPhone 6 Plus</browserstack.device>
				<browserstack.platform>MAC</browserstack.platform>
				<browserstack.os>ios</browserstack.os>
				<browserstack.browser>iPhone</browserstack.browser>
				<dataservice.context>ios</dataservice.context>
			</properties>
		</profile>
		<profile>
			<id>siteMobile</id>
			<properties>
				<dataservice.context>siteMobile</dataservice.context>
			</properties>
		</profile>
		<profile>
			<id>responsiveSmall</id>
			<properties>
				<device.width>320</device.width>
				<device.height>568</device.height>
				<serenity.browser.width>${device.width}</serenity.browser.width>
				<serenity.browser.height>${device.height}</serenity.browser.height>
				<chrome.switches>--window-size=${device.width},${device.height}</chrome.switches>
			</properties>
		</profile>
		<profile>
			<id>responsiveMedium</id>
			<properties>
				<device.width>375</device.width>
				<device.height>667</device.height>
				<serenity.browser.width>${device.width}</serenity.browser.width>
				<serenity.browser.height>${device.height}</serenity.browser.height>
				<chrome.switches>--window-size=${device.width},${device.height}</chrome.switches>
			</properties>
		</profile>
		<profile>
			<id>responsiveLarge</id>
			<properties>
				<device.width>414</device.width>
				<device.height>736</device.height>
				<serenity.browser.width>${device.width}</serenity.browser.width>
				<serenity.browser.height>${device.height}</serenity.browser.height>
				<chrome.switches>--window-size=${device.width},${device.height}</chrome.switches>
			</properties>
		</profile>
		<profile>
			<id>desktop</id>
			<properties>
				<dataservice.context>desktop</dataservice.context>
			</properties>
		</profile>
		<profile>
			<id>beaverConnection</id>
			<properties>
				<beaverUrl>https://beaver.pic.dev.os.pictime</beaverUrl>
			</properties>
			<build>
            	<plugins>
					<plugin>
						<groupId>com.pictime.testfactory</groupId>
						<artifactId>campaign-loader-maven-plugin</artifactId>
						<version>1.2.0</version>
						<configuration>
							<url>${beaverUrl}</url>
							<key>${key.campaign}</key>
							<targetPath>src/test/resources/features</targetPath>
							<skipCertificateCheck>true</skipCertificateCheck>
						</configuration>
						<executions>
							<execution>
								<phase>generate-test-resources</phase>
								<goals>
									<goal>load</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>com.pictime.testfactory</groupId>
						<artifactId>test-result-sender-maven-plugin</artifactId>
						<version>1.1.0</version>
						<configuration>
							<lock>false</lock>
							<pathToSerenityFolder>target/site/serenity/</pathToSerenityFolder>
							<pathToResultFolder>target/result/</pathToResultFolder>
							<beaverAPIUrl>${beaverUrl}/projects/scenarios/executions</beaverAPIUrl>
						</configuration>
						<executions>
							<execution>
								<phase>post-integration-test</phase>
								<goals>
									<goal>test-result-sender</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>com.pictime.testing</groupId>
			<artifactId>dataservice-test-common</artifactId>
			<version>1.5.0</version>
		</dependency>
	</dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>2.8.2</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.18</version>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.18</version>
				<configuration>
					<systemPropertyVariables>
						<properties>${serenity.property.path}</properties>
						<webdriver.driver>${serenity.webdriver.driver}</webdriver.driver>
						<webdriver.chrome.driver>${webdriver.chrome.driver}</webdriver.chrome.driver>
						<webdriver.ie.driver>${webdriver.ie.driver}</webdriver.ie.driver>
						<webdriver.firefox.profile>${webdriver.firefox.profile}</webdriver.firefox.profile>
						<webdriver.ie.driver.loglevel>FATAL</webdriver.ie.driver.loglevel>
						<tags>${tags}</tags>
						<dataservice.context>${dataservice.context}</dataservice.context>
						<dataservice.url>${dataservice.url}</dataservice.url>
						<!-- BrowserStack Capabilities -->
						<browserstack.url>${browserstack.url}</browserstack.url>
						<browserstack.os>${browserstack.os}</browserstack.os>
						<browserstack.os.version>${browserstack.os.version}</browserstack.os.version>
						<browserstack.browser>${browserstack.browser}</browserstack.browser>
						<browserstack.browser.version>${browserstack.browser.version}</browserstack.browser.version>
						<browserstack.device>${browserstack.device}</browserstack.device>
						<browserstack.device.orientation>${browserstack.device.orientation}</browserstack.device.orientation>
						<browserstack.project>${browserstack.project}</browserstack.project>
						<browserstack.build>${browserstack.build}</browserstack.build>
						<browserstack.session.name>${browserstack.session.name}</browserstack.session.name>
						<browserstack.local>${browserstack.local}</browserstack.local>
						<browserstack.debug>${browserstack.debug}</browserstack.debug>
						<browserstack.resolution>${browserstack.resolution}</browserstack.resolution>
						<browserstack.selenium.version>${browserstack.selenium.version}</browserstack.selenium.version>
						<browserstack.ie.no.flash>${browserstack.ie.no.flash}</browserstack.ie.no.flash>
						<browserstack.ie.driver>${browserstack.ie.driver}</browserstack.ie.driver>
						<browserstack.ie.enable.popups>${browserstack.ie.enable.popups}</browserstack.ie.enable.popups>
						<thucydides.driver.capabilities>acceptSslCerts:${browserstack.acceptSslCerts};${custom.capabilities}</thucydides.driver.capabilities>
						<chrome.switches>${chrome.switches}</chrome.switches>
					</systemPropertyVariables>
					<includes>
						<include>${maven-failsafe-plugin.include}</include>
					</includes>
					<reuseForks>false</reuseForks>
					<forkCount>1</forkCount>
					<argLine>-Xmx1024m -Dfile.encoding=${project.build.sourceEncoding}</argLine>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>net.serenity-bdd.maven.plugins</groupId>
				<artifactId>serenity-maven-plugin</artifactId>
				<version>${serenity-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>serenity-reports</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>aggregate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
